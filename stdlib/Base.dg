public namespace Base{
	
	public (PInt x)~>PInt print{
		printPInt(x);
		return 0;
	}
	
	public (PInt n)~>PInt println{
		printPInt(n);

		printChar('\n');
		return 0;
	}
	

	public (Char c)~>PInt printChar{
		putchar(c);
		return 0;
	}

