	public (PInt x)~>PInt printPInt{
		
		if(x>10){
			putchar(int2char(x));
		}else{
			lastdigit = (x % 10);
			divided = x / 10;
			printPInt(divided);
			putchar(int2char(lastdigit));
		}
		return 0;
	}
	
